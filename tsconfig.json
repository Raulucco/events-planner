{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es5",
        "jsx": "react"
    },
    "include": [
        "app/**/*",
        "typing/index.d.ts"
    ],
    "exclude": [
        "node_modules",
        "app/src/**/*.test.ts",
        "typings"
    ]
}