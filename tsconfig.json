{
    "compilerOptions": {
        "baseUrl": "app/src",
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es6",
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
        "app/src/**/*.test.ts"
    ]
}